<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamfyre.fyre"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.NFC" />

    <uses-feature
        android:name="android.hardware.nfc"
        android:required="true" />

    <application
        android:name="com.teamfyre.fyre.AppController"
        android:allowBackup="true"
        android:icon="@drawable/ic_logo_fyre"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.teamfyre.fyre.MainActivity"
            android:label="@string/label_recent_receipts"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.nfc.action.TECH_DISCOVERED" />
                <action android:name="android.nfc.action.NDEF_DISCOVERED" />

                <data android:mimeType="text/plain" />
            </intent-filter>

            <meta-data
                android:name="android.nfc.action.TECH_DISCOVERED"
                android:resource="@xml/nfc_tech_filter" />
            <meta-data
                android:name="android.app.default_searchable"
                android:value=".SearchableActivity" />
        </activity>
        <activity
            android:name="com.teamfyre.fyre.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.teamfyre.fyre.RegisterActivity"
            android:label="@string/label_register"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name="com.teamfyre.fyre.AccountActivity"
            android:label="@string/label_account_settings"
            android:parentActivityName="com.teamfyre.fyre.SettingsActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.teamfyre.fyre.SettingsActivity" />
        </activity>
        <activity
            android:name="com.teamfyre.fyre.SettingsActivity"
            android:label="@string/label_settings"
            android:parentActivityName="com.teamfyre.fyre.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.teamfyre.fyre.MainActivity" />
        </activity>
        <activity
            android:name="com.teamfyre.fyre.ReceiptManualActivity"
            android:label="@string/label_manual_add_receipt"
            android:parentActivityName="com.teamfyre.fyre.SettingsActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.teamfyre.fyre.SettingsActivity" />
        </activity>
        <activity
            android:name="com.teamfyre.fyre.ReceiptDetailActivity"
            android:label="@string/label_activity_receipt_detail"
            android:parentActivityName="com.teamfyre.fyre.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.teamfyre.fyre.MainActivity" />
        </activity>
        <!-- android:launchMode="singleTop" -->
        <activity
            android:name="com.teamfyre.fyre.SearchableActivity"
            android:label="@string/label_search_results"
            android:parentActivityName="com.teamfyre.fyre.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.teamfyre.fyre.MainActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
    </application>

</manifest>